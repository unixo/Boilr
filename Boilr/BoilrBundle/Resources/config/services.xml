<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <!--
    <parameters>
        <parameter key="boilr.example.class">Boilr\BoilrBundle\Example</parameter>
    </parameters>

    <services>
        <service id="boilr.example" class="%boilr.example.class%">
            <argument type="service" id="service_id" />
            <argument>plain_value</argument>
            <argument>%parameter_name%</argument>
        </service>
    </services>
    -->

    <services>
        <service id="boilr.type.installer_selector" class="Boilr\BoilrBundle\Form\Type\InstallerSelectorType">
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <tag name="form.type" alias="installer_selector" />
        </service>

        <!-- Request listener -->
        <service id="boilr.referer.listener" class="Boilr\BoilrBundle\Listener\RefererListener">
              <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" />
              <argument type="service" id="router" />
        </service>
        <!-- End of Request listener -->

        <!-- Geo-map -->
        <service id="boilr.map.location" class="Boilr\BoilrBundle\Map\LocationMap">
            <tag name="vichgeo.map" alias="location" />
        </service>

        <service id="boilr.geographical.icon_generator" class="Boilr\BoilrBundle\Map\IconGenerator" public="false" />
        <!-- End of Geo-map -->

        <!-- Custom menu renderer -->
        <service id="boilr.menu_renderer" class="Boilr\BoilrBundle\Menu\SidebarRenderer">
            <tag name="knp_menu.renderer" alias="boilr_menu_renderer" />
        </service>
        <!-- End of Custom menu render -->

        <!-- Custom validators -->
            <!-- Custom date validator -->
            <service id="validator.custom.date" class="Boilr\BoilrBundle\Validator\Constraints\CustomDateValidator">
                <tag name="validator.constraint_validator" alias="boilr.validator.date" />
            </service>
        <!-- End of Custom validators -->

        <!-- Form types -->
        <service id="form.type.province" class="Boilr\BoilrBundle\Form\Extension\Type\ProvinceType">
            <tag name="form.type" alias="province" />
        </service>
        <!-- End of Form types -->

        <!-- Form flows -->
            <!-- New person flow -->
            <service id="boilr.form.newPerson" class="Boilr\BoilrBundle\Form\NewPersonForm">
                <tag name="form.type" alias="boilr_newperson" />
            </service>

            <service id="boilr.form.flow.newPerson" class="Boilr\BoilrBundle\Form\Flow\NewPersonFlow"
                    parent="craue.form.flow" scope="request">
                <call method="setFormType">
                    <argument type="service" id="boilr.form.newPerson" />
                </call>
            </service>
            <!-- End of New person flow -->

            <!-- Link installer flow -->
            <service id="boilr.form.linkInstaller" class="Boilr\BoilrBundle\Form\LinkInstallerForm">
                <tag name="form.type" alias="boilr_linkinstaller" />
            </service>

            <service id="boilr.form.flow.linkInstaller" class="Boilr\BoilrBundle\Form\Flow\LinkInstallerFlow"
                    parent="craue.form.flow" scope="request">
                <call method="setFormType">
                    <argument type="service" id="boilr.form.linkInstaller" />
                </call>
            </service>
            <!-- End of Link installer flow -->
        <!-- End of Form flows -->
    </services>
</container>
