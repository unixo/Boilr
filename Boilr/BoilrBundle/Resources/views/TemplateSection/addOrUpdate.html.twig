{% extends 'BoilrBundle:Default:template5-base.html.twig' %}

{% block inner_block %}
<div class="span9">
  <div class="page-header">
    <h1>{{ (opType == 'add')?"Nuova":"Modifica" }} sezione <small>{{ template.name }}</small></h1>
  </div>

  <form id="form_template" action="{{ app.request.requestUri }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    <fieldset>
        <legend>Dettaglio sezione</legend>

        {{ form_row(form.name, {'label': 'Nome sezione', 'attr': {'class': 'span6'}}) }}
        {{ form_row(form.timeLength, {'label': 'Durata prevista', 'help_inline': 'espressa in minuti'}) }}
    </fieldset>

    <div class="form-actions">
      <input class="btn btn-primary" type="submit" value="Salva" />
      <a class="btn" href="{{ url('template_section_list', {id: template.id}) }}">Annulla</a>
    </div>

    {{ form_rest(form) }}
    {{ form_errors(form) }}
  </form>
</div>
{% endblock %}