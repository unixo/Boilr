{% set secondaryMenu = 'Amministrazione' %}
{% extends 'BoilrBundle:Default:template5.html.twig' %}
{% form_theme form 'BoilrBundle:Form:fields.html.twig' %}

{% block extra_header %}
<style>
#table_bind_operations label {
    width: 90%;
    text-align: left;
}
</style>
{% endblock %}

{% block central_block %}
<h2>Associazione controlli alla sezione "{{ section.name }}" del modello "{{ section.template.name }}"</h2>

<form id="form_operation" action="{{ app.request.requestUri }}" method="post" {{ form_enctype(form) }} >
    <fieldset>
        <legend>Elenco dei controlli disponibili</legend>

        <table id="table_bind_operations">
        {% for key,oper in form.operations %}
            <tr class="{{ cycle(['odd', 'even'], key) }}">
                <td>{{ form_widget(oper) }}</td>
                <td>{{ form_label(oper) }}</td>
            </tr>
        {% endfor %}
        </table>
    </fieldset>

    <div style="background-color: white; opacity: 1; width: 100%; padding: 10px;">
        <a href="{{ url('template_section_list', {id: section.template.id}) }}">Torna al dettaglio</a>
        <input type="submit" value="Salva" />
    </div>

    {{ form_rest(form) }}
    {{ form_errors(form) }}
</form>
{% endblock %}