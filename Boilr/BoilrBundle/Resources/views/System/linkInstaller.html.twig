{% extends 'BoilrBundle:Default:template5-base.html.twig' %}

{% block inner_block %}
<div class="span9">
  <div class="page-header">
    <h1>Selezione tecnico <small>predefinito per l'impianto</small></h1>
  </div>

  <form id="form_link_installer" action="{{ app.request.requestUri }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    <fieldset>
      <legend>Scheda impianto</legend>
      {% include 'BoilrBundle:System:_detail.html.twig' with {'system': system} %}
    </fieldset>

    <fieldset>
      <legend>Selezione tecnico</legend>
      {{ form_row(form.defaultInstaller, {'label': 'Tecnico predefinito'}) }}
    </fieldset>

    <div class="form-actions">
        <input class="btn btn-primary" id="btnSubmit" type="submit" value="Associa" />
        <a class="btn" href="{{ url('system_show', {'id': system.id}) }}">Annulla</a>
    </div>

    {{ form_rest(form) }}
    {{ form_errors(form) }}
  </form>
</div>
{% endblock %}