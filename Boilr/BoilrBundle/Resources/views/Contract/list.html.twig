{% extends 'BoilrBundle:Default:template5-base.html.twig' %}

{% block inner_block %}
<div class="span9">
  <div class="page-header">
    <h1>Elenco contratti stipulati</h1>
  </div>

  {% if contracts|length > 0 %}
  <table class="table table-condensed table-striped">
    <thead>
      <tr>
        <th>Cliente</th>
        <th>Impianto</th>
        <th>Inizio</th>
        <th>Fine</th>
        <th>Operaz.</th>
      </tr>
    </thead>
    <tbody>
      {% for contract in contracts %}
      <tr>
        <td><a href="{{ url('show_person', {id: contract.customer.id}) }}">{{ contract.customer.getFullname() }}</a></td>
        <td>{{ contract.system.descr }}</td>
        <td>{{ contract.startDate | date('d/m/Y H:i') }}</td>
        <td>{{ contract.endDate | date('d/m/Y H:i') }}</td>
        <td></td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
  {% else %}
    <div class="alert alert-info">Non Ã¨ stato ancora stipulato alcun contratto.</div>
  {% endif %}
</div>
{% endblock %}
