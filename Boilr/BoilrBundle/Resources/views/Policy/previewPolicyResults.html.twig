{% extends 'BoilrBundle:Default:template5-base.html.twig' %}

{% block inner_block %}
<div class="span9">
  <div class="page-header">
    <h1>Assegnazione assistita intervanti <small>Selezione politica</small></h1>
    <h2>{{ result.policyDescr }}</h2>
  </div>

  <h3>Risultato associazione</h3>
  <br>
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Data</th>
        <th>Ora</th>
        <th>Cliente</th>
        <th>Tecnico</th>
        <th># prima</th>
        <th># dopo</th>
      </tr>
    </thead>
    <tbody>
      {% for entry in result.associations %}
        <tr>
          <td>{{ entry.intervention.scheduledDate|localizeddate("medium", "none") }}</td>
          <td>{{ entry.intervention.scheduledDate|localizeddate("none", "short") }}</td>
          <td>{{ entry.intervention.customer.fullName }}</td>
          <td>{{ entry.installer.fullName }}</td>
          <td>{{ entry.prevLoad }}</td>
          <td>{{ entry.newLoad }}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <a class="btn btn-primary" href="{{ url('intervention_preview_policy', {'name': result.policyName, 'doit': true}) }}">Assegna</a>
  <a class="btn" href="{{ url('policy_edit_assignments', {'name': result.policyName}) }}">Modifica</a>

</div>
{% endblock inner_block %}