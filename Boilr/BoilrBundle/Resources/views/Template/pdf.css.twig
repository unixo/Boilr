body {
    font-family:"Times New Roman";
    font-size: 10px;
    padding: 20px;
    width: 650px;
}

div p {
  padding: 4px;
}

.break {
  page-break-after: always;
}

.dontsplit {
  page-break-inside: avoid;
}

#header {

}

#header h3 {
    text-align: center;
    font-size: 14px;
}

#header h4 {
    text-align: center;
}

#header p {
    font-size: 12px;
    text-transform: uppercase;
    font-weight: bold;
    text-align: justify;
    line-height: 130%;
    word-spacing: 10px;
}

#customer p {

}

span.checkbox {
  display: inline-block;
  width: 15px;
  height: 10px;
  border: 1px solid gray;
  margin-left: 50px;
}

#sections {
    border: 1px solid black;
    width: 100%;
}

#sections td.section_name {
    padding-top: 10px;
    font-weight: bold;
}

#sections td.check_name {
  padding-left:15px;
}

td.operations {
    width: 40%;
}

td.boxed {
    border: 1px solid gray;
    width: 20px;
    text-align: center;
}

td.op_header {
    font-size:10px;
    text-align: center;
}

#recommendations, #precautions {
    width: 100%;
    line-height: 2em;
}

span.row {
  border-bottom: 1px solid gray;
  display: block;
  float: right;
  width: 520px;
}

div.clear {
  clear: both;
  padding-bottom: 10px;
}

ol.warning li {
  line-height: 2em;
  text-align: justify;
}