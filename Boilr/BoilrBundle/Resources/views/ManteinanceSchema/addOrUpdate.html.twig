{% extends 'BoilrBundle:Default:template5-base.html.twig' %}

{% block inner_block %}
<div class="span9">
  <div class="page-header">
    <h1>Creazione nuovo schema di manutenzione</h1>
  </div>

  <form id="form_schema" action="{{ app.request.requestUri }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    <fieldset>
      <legend>Dettagli schema di manutenzione</legend>

        <div><label>Tipo impianto:</label>{{ form_widget(form.systemType) }}</div>
        <div><label>Periodico:</label>{{ form_widget(form.isPeriodic) }}</div>
        <div><label>Frequenza:</label>{{ form_widget(form.freq) }}</div>
        <div><label>Operazioni:</label>{{ form_widget(form.operationGroup) }}</div>
    </fieldset>

    <div class="form-actions">
      <input class="btn btn-primary" type="submit" value="Salva" />
      <a class="btn" href="{{ url('manteinance_schema_list') }}">Annulla</a>
    </div>

    {{ form_rest(form) }}
    {{ form_errors(form) }}
  </form>
</div>
{% endblock %}