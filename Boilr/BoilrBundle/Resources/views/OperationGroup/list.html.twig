{% set secondaryMenu = 'Amministrazione' %}
{% extends 'BoilrBundle:Default:template5.html.twig' %}
{% import "BoilrBundle:Common:macros.html.twig" as mymacro %}

{% block central_block %}
<h2>Gruppi di controlli</h2>

<fieldset>
    <legend>Elenco operazioni</legend>

    <table>
        <thead>
            <tr>
                <th>Sigla</th>
                <th>Descrizione</th>
                <th># controlli</th>
                <th>Operaz.</th>
            </tr>
        </thead>
        <tbody>
            {% for key,group in records %}
            <tr class="{{ cycle(['odd', 'even'], key) }}">
                <td><a href="{{ url('operation_group_operations', {id: group.id} ) }}">{{ group.name }}</a></td>
                <td>{{ group.descr }}</td>
                <td>{{ group.operations|length }}</td>
                <td>
                    <a href="{{ url('operation_group_edit', {oid: group.id}) }}"><span class="ui-icon ui-icon-pencil"></span></a>
                    <a href="{{ url('operation_group_delete', {id: group.id}) }}"><span class="ui-icon ui-icon-trash"></span></a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</fieldset>

<div style="margin-top: 10px;">
    <ul id="icons" class="ui-widget ui-helper-clearfix">
        <li class="ui-state-default ui-corner-all">
            <a href="{{ url('operation_group_add') }}">
                <span class="ui-icon ui-icon-plusthick" title="Aggiungi gruppo..."></span>
            </a>
        </li>
    </ul>
</div>
{% endblock %}