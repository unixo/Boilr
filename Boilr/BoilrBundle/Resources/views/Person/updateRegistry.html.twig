{% extends 'BoilrBundle:Person:person-base.html.twig' %}
{% form_theme form 'BoilrBundle:Form:fields.html.twig' %}

{% block inner_block %}
<div class="span10">
  <form id="form_registry" action="{{ app.request.requestUri }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    <fieldset>
      <legend>Dati anagrafici</legend>

      {{ form_row(form.type) }}
      {{ form_row(form.title) }}
      {{ form_row(form.name) }}
      {{ form_row(form.surname) }}
      {{ form_row(form.fiscalCode) }}
      {{ form_row(form.vatCode) }}
    </fieldset>

    <fieldset>
      <legend>Recapiti</legend>

      {{ form_row(form.homePhone) }}
      {{ form_row(form.officePhone) }}
      {{ form_row(form.cellularPhone) }}
      {{ form_row(form.faxNumber) }}
      {{ form_row(form.primaryMail, {prepend: '@'}) }}
      {{ form_row(form.secondaryMail, {prepend: '@'}) }}
    </fieldset>

    <fieldset>
      <legend>Tipologia contatto</legend>

      {{ form_row(form.isCustomer) }}
      {{ form_row(form.isInstaller) }}
      {{ form_row(form.isAdministrator) }}
    </fieldset>

    <div class="form-actions">
      <input type="submit" class="btn btn-primary" value="Aggiorna" />
      <a class="btn" href="{{ url('show_person', {'id': person.id}) }}">Annulla</a>
    </div>

    {{ form_rest(form) }}
    {{ form_errors(form) }}
  </form>
</div>
{% endblock %}
